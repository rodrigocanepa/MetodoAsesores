<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    tools:context="projects.solucionescolabora.com.metodoasesores.RegistroActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgRegistroLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/metodo_sin_fondo"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="16sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">


            <EditText
                android:id="@+id/editEmailRegistro"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="12sp"
                android:background="@drawable/borde_redondeado_blur"
                android:drawablePadding="15sp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:hint="ESCRIBE TU EMAIL"
                android:inputType="textEmailAddress"
                android:paddingEnd="12sp"
                android:paddingStart="12sp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="14sp" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18sp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@android:color/white">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:textSize="14sp"
                    android:paddingStart="12sp"
                    android:paddingEnd="12sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:inputType="textPassword"
                    android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                    android:drawablePadding="15sp"
                    android:background="@drawable/borde_redondeado_blur"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:hint="ESCRIBE TU CONTRASEÑA"
                    android:id="@+id/editPasswordRegistro"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18sp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@android:color/white">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:textSize="14sp"
                    android:paddingStart="12sp"
                    android:paddingEnd="12sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:inputType="textPassword"
                    android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                    android:drawablePadding="15sp"
                    android:background="@drawable/borde_redondeado_blur"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:hint="CONFIRMA TU CONTRASEÑA"
                    android:id="@+id/editPasswordAgainRegistro"/>

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SOY"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_marginTop="10sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8sp"
                android:paddingRight="8sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true">

                    <RadioButton
                        android:id="@+id/radioStartup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@android:color/white"/>

                    <TextView
                        android:id="@+id/txtStartup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/radioStartup"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:text="STARTUP"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <RadioButton
                        android:id="@+id/radioConsultor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:text="CONSULTOR"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <RadioButton
                        android:id="@+id/radioInstuticion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:text="INSTITUCIÓN"/>

                </LinearLayout>


            </RelativeLayout>


            <Button
                android:id="@+id/btnRegistro"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:textSize="15sp"
                android:text="REGISTRAR"
                android:textStyle="bold"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:background="@drawable/borde_white_blur"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:background="@android:color/white" />



            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginRight="5sp"
                android:layout_weight="1"
                android:background="@android:color/white" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/txtTerminos"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="@string/terminosLink"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
