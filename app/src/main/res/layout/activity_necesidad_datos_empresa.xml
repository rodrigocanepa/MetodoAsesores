                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="Asociacion civil o IAP"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:textColor="@android:color/white"
                android:text="15. ¿Qué formas de cobranza usa?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad15Efectivo"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:background="@android:color/white"
                    android:text="Efectivo"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad15PuntoVenta"
                    android:layout_width="150sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="Punto de venta/Lector tarjeta"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad15Otro"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="Otro"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:textColor="@android:color/white"
                android:text="16. ¿Cuenta con local o establecimiento?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad16Si"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:background="@android:color/white"
                    android:text="Si"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad16No"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="No"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:textColor="@android:color/white"
                android:text="17. ¿Cuenta con página web?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad17Si"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:background="@android:color/white"
                    android:text="Si"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad17No"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="No"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editDiagnosticoNecesidad18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:hint="18. Escriba el dominio (si tiene)"
                    android:textColor="@android:color/white" />

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:textColor="@android:color/white"
                android:text="19. ¿Cuenta con red o redes sociales?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad19Si"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:background="@android:color/white"
                    android:text="Si"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad19No"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="No"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editDiagnosticoNecesidad20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:hint="20. Escriba sus redes sociales (si es que tiene)"
                    android:textColor="@android:color/white" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:textColor="@android:color/white"
                android:text="21. ¿Ha realizado ventas en línea?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad21Si"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:background="@android:color/white"
                    android:text="Si"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad21No"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="No"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:textColor="@android:color/white"
                android:text="22. ¿Cuenta con software de facturación?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad22Si"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:background="@android:color/white"
                    android:text="Si"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad22No"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="No"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:textColor="@android:color/white"
                android:text="23. ¿Cuenta con correo institucional?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad23Si"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:background="@android:color/white"
                    android:text="Si"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad23No"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="No"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:textColor="@android:color/white"
                android:text="24. ¿Cuenta con imagen corporativa?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad24Si"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:background="@android:color/white"
                    android:text="Si"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad24No"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="No"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:textColor="@android:color/white"
                android:text="25. ¿Cuenta con algún otro registro de protección intelectual?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad25Si"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:background="@android:color/white"
                    android:text="Si"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad25No"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="No"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:textColor="@android:color/white"
                android:text="26. Si la respuesta es SI, mencionar cual o cuales"/>

