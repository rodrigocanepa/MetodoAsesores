                <Button
                    android:id="@+id/btnDiagnosticoNecesidad26Otro"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
