<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/side_nav_bar"
    android:padding="6sp"
    tools:context="projects.solucionescolabora.com.metodoasesores.Cuestinario.NecesidadDatosEmpresaActivity">

    <TextView
        android:id="@+id/txtSeccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="6sp"
        android:textColor="@android:color/white"
        android:text="Introduzca los datos de la empresa"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editDiagnosticoNecesidad7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:hint="7. Nombre comercial"
                    android:textColor="@android:color/white" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editDiagnosticoNecesidad8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:hint="8. Razón social"
                    android:textColor="@android:color/white" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editDiagnosticoNecesidad9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:hint="9. RFC"
                    android:textColor="@android:color/white" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editDiagnosticoNecesidad10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:hint="10. Dirección"
                    android:textColor="@android:color/white" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editDiagnosticoNecesidad11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:hint="11. Teléfono"
                    android:textColor="@android:color/white" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:textColor="@android:color/white"
                android:text="12. Giro del negocio"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad12Comercio"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:background="@android:color/white"
                    android:text="Comercio"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad12Servicio"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="Servicio"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad12Industria"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="Industria"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad12Maquila"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:layout_marginLeft="4sp"
                    android:textSize="12sp"
                    android:background="@android:color/white"
                    android:text="Maquila"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:textColor="@android:color/white"
                android:text="13. Estatus del proyecto"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad13Idea"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:background="@android:color/white"
                    android:text="Idea"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad13Proyecto"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="Proyecto"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad13Empresa"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="Empresa"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad13Otro"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:layout_marginLeft="4sp"
                    android:textSize="12sp"
                    android:background="@android:color/white"
                    android:text="Otro"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:textColor="@android:color/white"
                android:text="Si está dado de alta ante hacienda favor de responder la siguiente pregunta, en caso contrario omitir"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:textColor="@android:color/white"
                android:text="14. ¿Bajo qué régimen se dio de alta?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad14RIF"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:background="@android:color/white"
                    android:text="RIF"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad14PersonaFisica"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="Persona fisica"/>

                <Button
                    android:id="@+id/btnDiagnosticoNecesidad14EmpresaMoral"
                    android:layout_width="75sp"
                    android:layout_height="40sp"
                    android:textSize="12sp"
                    android:layout_marginRight="4sp"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/white"
                    android:text="Empresa Moral"/>

                <Button
