<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/relativeLayoutCursos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButtons"
        android:padding="12sp">

        <TextView
            android:id="@+id/item_txtCursoNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rodrigo Iván"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/item_txtCursoDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_txtCursoNombre"
            tools:text="Tecnologia e Innovación"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/item_txtCursoDuracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_txtCursoDescripcion"
            tools:text="2 horas"
            android:textStyle="italic"
            android:textColor="@android:color/white"/>


    </RelativeLayout>


    <Button
        android:id="@+id/btnEditarCursos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:layout_below="@+id/relativeLayoutCursos"
        android:text="EDITAR CURSO"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:layout_marginBottom="12sp"/>


</RelativeLayout>