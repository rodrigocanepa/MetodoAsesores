<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    tools:context="projects.solucionescolabora.com.metodoasesores.Instituciones.InstitucionesMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5">

            <ImageView
                android:id="@+id/imgInstitucionHomeFondo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgInstitucionAvatarHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginBottom="60sp"
                android:src="@drawable/ic_account_circle_black_24dp"/>

            <TextView
                android:id="@+id/txtInstitucionRFCHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:textColor="#F5F5F5"
                android:shadowColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:shadowRadius="1"
                tools:text="Rodrigo Canepa"/>

            <TextView
                android:id="@+id/txtInstitucionNameHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtInstitucionRFCHome"
                android:gravity="center"
                android:textColor="#F5F5F5"
                android:textStyle="bold"
                android:shadowColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:shadowRadius="1"
                tools:text="Soluciones Colabora"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:padding="25sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="20sp"
                    android:layout_marginLeft="20sp">

                    <ImageView
                        android:id="@+id/imgInstitucionHomeCrearConv"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_insert_invitation_black_24dp"
                        android:padding="15sp"
                        android:background="@color/colorButtons"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:text="Crear nueva convocatoria"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp">

                    <ImageView
                        android:id="@+id/imgInstitucionVerHist"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/folder"
                        android:padding="12sp"
                        android:background="@color/colorButtons"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:text="Ver historial de convocatorias"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="20sp"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgInstitucionHomeVerConsul"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/consultores"
                        android:padding="12sp"
                        android:background="@color/colorButtons"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:text="Ver todos los consultores"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="20sp"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgInstitucionHomeCerrarSes"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="12sp"
                        android:src="@drawable/cerrar"
                        android:background="@color/colorButtons"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:text="Cerrar la sesiÃ³n actual"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
