<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/side_nav_bar"
    android:padding="12sp"
    tools:context="projects.solucionescolabora.com.metodoasesores.LogOrRegActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtGoToBienvenido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Â¡Bienvenido!"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="36sp"/>

            <ImageView
                android:id="@+id/imgGoToLogo"
                android:layout_width="300sp"
                android:layout_height="170sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/metodo_sin_fondo"/>

            <TextView
                android:id="@+id/txtGoToIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="Plataforma para vincular profesionales con startups e instituciones que requieran servicios"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="60sp"
        android:layout_margin="18sp">

        <Button
            android:id="@+id/btnGoToLogin"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:textSize="16sp"
            android:layout_marginRight="1sp"
            android:layout_marginLeft="1sp"
            android:text="INICIAR SESION"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/borde_white_blur"/>

        <Button
            android:id="@+id/btnGoToRegister"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:textSize="16sp"
            android:layout_marginRight="1sp"
            android:layout_marginLeft="1sp"
            android:text="REGISTRARSE"
            android:textStyle="bold"
            android:layout_marginTop="24sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/borde_white_blur"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtGoToSolCol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="italic"
        android:text="@string/solcolLink"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"/>


</LinearLayout>
