<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCarouselStartup"
            android:layout_centerVertical="true"
            android:layout_width="130sp"
            android:layout_height="90sp"
            android:layout_marginLeft="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@+id/imgCarouselStartup">

            <TextView
                android:id="@+id/txtCarouselInstitucionNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_toRightOf="@id/imgCarouselStartup"
                tools:text="COPARMEX"/>

            <TextView
                android:id="@+id/txtCarouselTituloInstitucion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@id/imgCarouselStartup"
                android:textStyle="italic"
                android:textSize="16sp"
                android:layout_below="@id/txtCarouselInstitucionNombre"
                android:layout_centerHorizontal="true"
                tools:text="COPARMEX"/>

            <TextView
                android:id="@+id/txtCarouselDescripcionInstitucion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@id/imgCarouselStartup"
                android:layout_below="@id/txtCarouselTituloInstitucion"
                android:layout_centerHorizontal="true"
                tools:text="COPARMEX"/>

            <Button
                android:id="@+id/btnCarousel"
                android:layout_width="70sp"
                android:layout_height="30sp"
                android:layout_below="@+id/txtCarouselDescripcionInstitucion"
                android:layout_toRightOf="@id/imgCarouselStartup"
                android:background="@drawable/borde_trans_blur"
                android:padding="6sp"
                android:textSize="9sp"
                android:layout_marginTop="10sp"
                android:textColor="@android:color/white"
                android:text="VER ENLACE"/>
        </LinearLayout>


